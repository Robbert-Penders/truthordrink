<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="truthordrink.AddQuestions">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Margin="0, 40, 0, 0" WidthRequest="100" Source="logo.png"/>
            <Label Text="TRUTH OR DRINK" HorizontalTextAlignment="Center" TextColor="#2f3542" FontFamily="PoppinsBold" FontSize="36" Margin="0, 10, 0, 0"/>

            <StackLayout Margin="30, 50, 30, 0">
                <Label Text="Enter new question" />
                <Entry x:Name="QuestionEntry" Placeholder="Max 200 characters"/>
                <Button x:Name="SaveButton" Text="Save" Clicked="SaveButton_Clicked"/>

                <ListView x:Name="QuestionListView" ItemSelected="QuestionListView_ItemSelected">

                    <ListView.ItemTemplate>

                        <DataTemplate>
                            <TextCell Text="{Binding Questionbody}" TextColor="Black"/>
                        </DataTemplate>


                    </ListView.ItemTemplate>


                </ListView>
            </StackLayout>
            



        </StackLayout>
    </ContentPage.Content>
</ContentPage>