<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="truthordrink.ForgotPassword">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Margin="0, 40, 0, 0" WidthRequest="100" Source="logo.png"/>
            <Label Text="TRUTH OR DRINK" HorizontalTextAlignment="Center" TextColor="#2f3542" FontFamily="PoppinsBold" FontSize="36" Margin="0, 10, 0, 0"/>


            <StackLayout Margin="30, 50, 30, 0">
                <Label Text="Forgotten your password?" HorizontalTextAlignment="Left" TextColor="#2f3542" FontFamily="Poppins" FontSize="36" Margin="0, 0, 0, 0"/>
                <Entry x:Name="emailEntry" Placeholder="Email address"/>
                <Button x:Name="PasswordReset" Text="Request password reset" CornerRadius="5" BackgroundColor="#03a9f4" TextColor="#FFFFFF" Margin="0,10,0,0" Clicked="PasswordReset_Clicked" />
                <Label Text="In case we find an account that is associated with the provided email address, a password reset link will be sent to the provided email address" HorizontalTextAlignment="Start" Margin="0,35,0,0"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>