<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="truthordrink.LandingPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Margin="0, 40, 0, 0" WidthRequest="100" Source="logo.png"/>
            <Label Text="TRUTH OR DRINK" HorizontalTextAlignment="Center" TextColor="#2f3542" FontFamily="PoppinsBold" FontSize="36" Margin="0, 10, 0, 0"/>

            <StackLayout Margin="30, 50, 30, 0" HorizontalOptions="Center">
                <Label Text="What would you like to do?" HorizontalTextAlignment="Center" TextColor="#2f3542" FontFamily="Poppins" FontSize="28" Margin="0, 0, 0, 0"/>
                <Button x:Name="CreateGameButton" Text="Create a game" CornerRadius="5" BackgroundColor="#03a9f4" TextColor="#FFFFFF" Margin="0,30,0,0" Clicked="CreateGameButton_Clicked"/>
                <Button x:Name="ManageQuestionButton" Text="Manage question sets" CornerRadius="5" BackgroundColor="#03a9f4" TextColor="#FFFFFF" Margin="0,20,0,0" Clicked="ManageQuestionButton_Clicked"/>
            </StackLayout>
            
        </StackLayout>
            
    </ContentPage.Content>
</ContentPage>